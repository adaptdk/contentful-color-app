    "@contentful/react-apps-toolkit": "1.2.2",
    "@dnd-kit/core": "^6.0.8",
    "@dnd-kit/sortable": "^7.0.2",
    "@dnd-kit/utilities": "^3.2.1",
    "@uiw/react-codemirror": "^4.21.7",
    "contentful-management": "10.7.0",
