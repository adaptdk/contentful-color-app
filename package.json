  "author": "Tomas Leonaviƒçius",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "lint": "eslint --ext .ts --ext .tsx .",
    "lint-fix": "eslint --ext .ts --ext .tsx . --fix",
    "create-app-definition": "contentful-app-scripts create-app-definition",
